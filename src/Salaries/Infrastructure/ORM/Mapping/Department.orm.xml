<doctrine-mapping>
    <entity name="XYZ\Salaries\Domain\Entity\Department">
        <id name="id" type="string">
            <generator strategy="NONE" />
        </id>
        <field name="name" type="string" />
        <one-to-many
            field="employees"
            target-entity="XYZ\Salaries\Domain\Entity\Employee"
            mapped-by="department"
        />
    </entity>
</doctrine-mapping>
