<doctrine-mapping>
    <entity name="XYZ\Salaries\Domain\Entity\Employee">
        <id name="id" type="string">
            <generator strategy="NONE" />
        </id>
        <many-to-one
                field="department"
                target-entity="XYZ\Salaries\Domain\Entity\Department"
                inversed-by="employees">
            <join-column nullable="false"/>
        </many-to-one>
    </entity>
</doctrine-mapping>
